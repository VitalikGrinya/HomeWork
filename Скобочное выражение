using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            char symbolYoungMoon = '(';
            char symbolOldMoon = ')';

            string text = "(()(()))";

            int amountOfYoungMoonSymbols = 0;
            int amountOfOldMoonSymbols = 0;
            int maxDepth = 0;
            int depthInMin = 0;
            int depthInMax = 0;

            bool isCorrect = true;

            Console.WriteLine($"Скобочное выражение: {text}");

            for (int i = 0; i < text.Length; i++)
            {
                if (text[i] == symbolYoungMoon)
                {
                    depthInMax++;
                }
                
                if (text[i] == symbolOldMoon)
                {
                     depthInMin--;
                }

                if (text[0] == symbolOldMoon)
                {
                    isCorrect = false;
                }
            }

            if (depthInMax + depthInMin !=0 || !isCorrect)
            {
                Console.WriteLine("Скобочное выражение не соответствует условию.");
            }

            Console.WriteLine($"Максимальная глубина скобочных вложений равна: {maxDepth}.");
        }
    }
}
