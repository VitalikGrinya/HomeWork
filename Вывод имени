using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string nameInput;
            string symbol;
            int extraSymbol = 1;

            nameInput = Console.ReadLine();
            symbol = Console.ReadLine();
            Console.Clear();
            
            for (int i = 0; i <= nameInput.Length + extraSymbol; i++)
            {
                Console.Write(symbol);
            }

            Console.WriteLine("\n" + symbol + nameInput + symbol);
            Console.Write(symbol);
        }
    }
}
