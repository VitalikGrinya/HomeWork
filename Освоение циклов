using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userMessage;
            int countOfMessages;

            Console.Write("Введите ваше сообщение: ");
            userMessage = Console.ReadLine();
            Console.Write("Сколько раз его повторить: ");
            countOfMessages = Convert.ToInt32(Console.ReadLine());

            for(int i = 1; i <= countOfMessages; i++)
            {
                Console.WriteLine(userMessage);
            }
        }
    }
}
