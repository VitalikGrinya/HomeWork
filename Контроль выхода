using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string breakComand = "Exit";
            string messange;
            bool exit = true;

            while (exit)
            {
                Console.WriteLine("Поговорим?");
                messange = Console.ReadLine();

                if (messange == breakComand)
                {
                    exit = false;
                }
            }
        }
    }
}
