using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string SetNameCommand = "создать имя";
            const string ChangeConsoleColorCommand = "сменить цвет консоли";
            const string ChangeFontColorCommand = "сменить цвет шрифта";
            const string SetPasswordCommand = "установить пароль";
            const string EscCommand = "выйти";

            string userInput;
            string userName;
            string userPassword;
            string escape = "До свидание!";

            Console.WriteLine("Что вам угодно?");
            userInput = Console.ReadLine();

            while (userInput != escape)
            {
                switch (userInput)
                {
                    case SetNameCommand:
                        Console.Write("Введите свое имя: ");
                        userName = Convert.ToString(Console.ReadLine());
                        Console.WriteLine("Вас зовут: " + userName);

                        Console.WriteLine("Далее: ");
                        userInput = Convert.ToString(Console.ReadLine());
                        break;

                    case ChangeConsoleColorCommand:
                        Console.BackgroundColor = ConsoleColor.Red;
                        Console.WriteLine("Цвет изменен.");

                        Console.WriteLine("Далее: ");
                        userInput = Convert.ToString(Console.ReadLine());
                        break;

                    case ChangeFontColorCommand:
                        Console.ForegroundColor = ConsoleColor.DarkYellow;
                        Console.WriteLine("Цвет изменен.");

                        Console.WriteLine("Далее: ");
                        userInput = Convert.ToString(Console.ReadLine());
                        break;

                    case SetPasswordCommand:
                        Console.WriteLine("Создайте пароль: ");
                        userPassword = Convert.ToString(Console.ReadLine());
                        Console.WriteLine("Ваш пароль: " + userPassword);

                        Console.WriteLine("Далее: ");
                        userInput = Convert.ToString(Console.ReadLine());
                        break;

                    case EscCommand:
                        Console.WriteLine(escape);
                        userInput = escape;
                        break;

                    default:
                        Console.WriteLine("Я не знаю такой команды. Попропуй другую.");
                        userInput = Convert.ToString(Console.ReadLine());
                        break;
                }
            }
        }
    }
}
