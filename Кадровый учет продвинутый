namespace PersonnelAccounting
{
    class Program
    {
        static void Main(string[] args)
        {
            const string CommandAddDossier = "1";
            const string CommandShowDossier = "2";
            const string CommandDeleteDossier = "3";
            const string CommandExit = "4";

            Dictionary<string, string> dossier = new Dictionary<string, string>();

            string userInput;

            string fullNameInput = "";
            string postInput = "";
            string deleteDossier = "";

            bool isWorking = true;

            Console.WriteLine($"Для продолжения работы введите следующию цифру:\n{1} Добавить досье.\n" +
                $"{2} Вывести досье.\n{3} Удалить досье.\n{4} Выход из программы.");

            while (isWorking)
            {
                userInput = Console.ReadLine();

                switch (userInput)
                {
                    case CommandAddDossier:
                        AddDossier(dossier, fullNameInput, postInput);
                        break;

                    case CommandShowDossier:
                        ShowDossier(dossier, fullNameInput, postInput);
                        break;

                    case CommandDeleteDossier:
                        DeleteDossier(dossier, deleteDossier);
                        break;

                    case CommandExit:
                        isWorking = false;
                        break;

                    default:
                        Console.WriteLine("Такой команды не существует.");
                        break;
                }
            }
        }
        static void AddDossier(Dictionary<string, string> text, string fullNameInput, string postInput)
        {
            fullNameInput = Console.ReadLine();
            postInput = Console.ReadLine();
            text.Add(fullNameInput, postInput);
        }
        static void ShowDossier(Dictionary<string, string> text, string fullNameInput, string postInput)
        {
            foreach (var word in text)
            {
                Console.WriteLine(word.Key + " - " + word.Value);
            }
        }
        static void DeleteDossier(Dictionary<string, string> text, string deleteDossier)
        {
            Console.WriteLine("Введите ФИО сотрудника, чьё досье хотите удалить: ");
            deleteDossier = Console.ReadLine();

            if (text.ContainsKey(deleteDossier))
            {
                text.Remove(deleteDossier);
            }
            else
            {
                Console.WriteLine("Такого сотрудника не существует.");
            }
        }
    }
}
