using System.Globalization;
using System.Net.Http.Headers;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string ConvertionUsdToRub = "доллары в рубли";
            const string ConvertionUsdToEur = "доллары в евро";
            const string ConvertionRubToUsd = "рубли в доллары";
            const string ConvertionRubToEur = "рубли в евро";
            const string ConvertionEurToUsd = "евро в доллары";
            const string ConvertionEurToRub = "евро в рубли";
            const string ConvertionExit = "выйти";

            int numbersOfUsdToConversion;
            int numbersOfRubToConversion;
            int numbersOfEurToConversion;
            float usdUser = 100;
            float rubUser = 100;
            float eurUser = 100;
            float usdToRub = 90;
            float usdToEur = 0.95f;
            float rubToUsd = 0.09f;
            float rubToEur = 0.1f;
            float eurToUsd = 1.05f;
            float eurToRub = 80;
            string convertion;
            bool isPayAbility;

            Console.WriteLine("Что будем конвертировать?");
            convertion = Console.ReadLine();

            switch (convertion)
            {
                case ConvertionUsdToRub:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfUsdToConversion = Convert.ToInt32(Console.ReadLine());
                    if(usdUser >= numbersOfUsdToConversion)
                    {
                        usdUser -= numbersOfUsdToConversion;
                        rubUser += usdToRub * numbersOfUsdToConversion;
                    }

                    break;

                case ConvertionUsdToEur:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfUsdToConversion = Convert.ToInt32(Console.ReadLine());
                    if(usdUser >= numbersOfUsdToConversion)
                    {
                        usdUser -= numbersOfUsdToConversion;
                        eurUser += usdToEur * numbersOfUsdToConversion;
                    }
                    break;

                case ConvertionRubToUsd:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfRubToConversion = Convert.ToInt32(Console.ReadLine());
                    if(rubUser >= numbersOfRubToConversion)
                    {
                        rubUser -= numbersOfRubToConversion;
                        usdUser += rubToUsd * numbersOfRubToConversion;
                    }
                    break;

                case ConvertionRubToEur:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfRubToConversion = Convert.ToInt32(Console.ReadLine());
                    if(rubUser >= numbersOfRubToConversion)
                    {
                        rubUser -= numbersOfRubToConversion;
                        eurUser += rubToEur * numbersOfRubToConversion;
                    }
                    break;

                case ConvertionEurToUsd:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfEurToConversion = Convert.ToInt32(Console.ReadLine());
                    if(eurUser >= numbersOfEurToConversion)
                    {
                        eurUser -= numbersOfEurToConversion;
                        usdUser += eurToUsd * numbersOfEurToConversion;
                    }
                    break;

                case ConvertionEurToRub:
                    Console.WriteLine("Сколько будем конвертировать?");
                    numbersOfEurToConversion = Convert.ToInt32(Console.ReadLine());
                    if(eurUser >= numbersOfEurToConversion)
                    {
                        eurUser -= numbersOfEurToConversion;
                        rubUser += eurToRub * numbersOfEurToConversion;
                    }
                    break;

                case ConvertionExit:
                    Console.WriteLine("До свидания!");
                    break;

                default:
                    Console.WriteLine("Такой валюты не существует.");
                    break;
            }

            Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
        }
    }
}
