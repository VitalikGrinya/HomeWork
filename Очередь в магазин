namespace QueueInMall
{
    class Program
    {
        static void Main(string[] args)
        {
            Queue<int> buyers = new Queue<int>();

            int sum = 0;

            buyers.Enqueue(5);
            buyers.Enqueue(18);
            buyers.Enqueue(3);
            buyers.Enqueue(7);
            buyers.Enqueue(16);

            foreach (int buyer in buyers)
            {
                Console.WriteLine($"Свободная касса: {buyer}");
                Console.ReadKey();
                Console.Clear();
            }

            BuyInMall(buyers, sum);

        }
        static void BuyInMall(Queue<int> queue, int value)
        {
            bool isWorking = true;

            while (isWorking)
            {
                for (int i = 0; i < queue.Count; i++)
                {
                    value += queue.Dequeue();
                }

                if (queue.Count == 0)
                {
                    Console.WriteLine("Заработок - " + value);
                    isWorking = false;
                }
            }
        }
    }
}
