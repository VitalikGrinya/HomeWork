using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            const string SetNameCommand = "1 Установить имя пользователя";
            const string ChangeConsoleColorCommand = "2 Сменить цвет консоли";
            const string ChangeFontColorCommand = "3 Сменить цвет шрифта";
            const string SetPasswordCommand = "4 Установить пароль";
            const string EscCommand = "5 Выйти из программы";

            string userInput;
            string userName;
            string userPassword;
            string farewellMessage = "До свидание!";

            Console.WriteLine("Данное приложение обрабатывает следующие команды: 1 Установить имя пользователя." +
                " 2 Сменить цвет консоли. 3 Сменить цвет шрифта. 4 Установить пароль. 5 Выйти из программы");
            Console.WriteLine("Готовы начать? Да/Нет");
            userInput = Console.ReadLine();

            if(userInput == "Да")
            {
                while (userInput != farewellMessage)
                {
                    Console.WriteLine("Введите номер команды: ");
                    userInput = Console.ReadLine();

                    switch (userInput)
                    {
                        case SetNameCommand:
                            Console.Write("Введите свое имя: ");
                            userName = Console.ReadLine();
                            Console.WriteLine("Вас зовут: " + userName);
                            break;

                        case ChangeConsoleColorCommand:
                            Console.BackgroundColor = ConsoleColor.Red;
                            Console.WriteLine("Цвет изменен.");
                            break;

                        case ChangeFontColorCommand:
                            Console.ForegroundColor = ConsoleColor.DarkYellow;
                            Console.WriteLine("Цвет изменен.");
                            break;

                        case SetPasswordCommand:
                            Console.WriteLine("Создайте пароль: ");
                            userPassword = Convert.ToString(Console.ReadLine());
                            Console.WriteLine("Ваш пароль: " + userPassword);
                            break;

                        case EscCommand:
                            Console.WriteLine(farewellMessage);
                            userInput = farewellMessage;
                            break;

                        default:
                            Console.WriteLine("Я не знаю такой команды. Попропуй другую.");
                            userInput = Console.ReadLine();
                            break;
                    }
                }
            }
            else
            {
                Console.WriteLine("Ждем вас здесь снова!");
            }
        }
    }
}
