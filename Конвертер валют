using System.Globalization;
using System.Net.Http.Headers;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int usd;
            int rub;
            int eur;
            float usdUser = 100;
            float rubUser = 100;
            float eurUser = 100;
            float usdPrice = 90;
            float rubPrice = 10;
            float eurPrice = 100;
            float usdToRub;
            float usdToEur;
            float rubToUsd;
            float rubToEur;
            float eurToUsd;
            float eurToRub;
            string convertion;
            const string ConvertionUsdToRub = "доллары в рубли";
            const string ConvertionUsdToEur = "доллары в евро";
            const string ConvertionRubToUsd  = "рубли в доллары";
            const string ConvertionRubToEur  = "рубли в евро";
            const string ConvertionEurToUsd  = "евро в доллары";
            const string ConvertionEurToRub  = "евро в рубли";
            const string ConvertionExit  = "выйти";

            Console.WriteLine("Что будем конвертировать?");
            convertion = Console.ReadLine();

            switch(convertion)
            {
                case ConvertionUsdToRub:
                    Console.WriteLine("Сколько будем конвертировать?");
                    usd = Convert.ToInt32(Console.ReadLine());
                    usdToRub = usdPrice / rubPrice;
                    rubUser += usdToRub * usd;
                    usdUser -= usd;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;

                case ConvertionUsdToEur:
                    Console.WriteLine("Сколько будем конвертировать?");
                    usd = Convert.ToInt32(Console.ReadLine());
                    usdToEur = usdPrice / eurPrice;
                    eurUser += usdToEur * usd;
                    usdUser -= usd;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;

                case ConvertionRubToUsd:
                    Console.WriteLine("Сколько будем конвертировать?");
                    rub = Convert.ToInt32(Console.ReadLine());
                    rubToUsd = rubPrice / usdPrice;
                    usdUser += rubToUsd * rub;
                    rubUser -= rub;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;

                case ConvertionRubToEur:
                    Console.WriteLine("Сколько будем конвертировать?");
                    rub = Convert.ToInt32(Console.ReadLine());
                    rubToEur = rubPrice / eurPrice;
                    eurUser += rubToEur * rub;
                    rubUser -= rub;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;       
                    
                case ConvertionEurToUsd:
                    Console.WriteLine("Сколько будем конвертировать?");
                    eur = Convert.ToInt32(Console.ReadLine());
                    eurToUsd = eurPrice / usdPrice;
                    usdUser += eurToUsd * eur;
                    eurUser -= eur;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;

                case ConvertionEurToRub:
                    Console.WriteLine("Сколько будем конвертировать?");
                    eur = Convert.ToInt32(Console.ReadLine());
                    eurToRub = eurPrice / rubPrice;
                    rubUser += eurToRub * eur;
                    eurUser -= eur;
                    Console.WriteLine($"Ваш баланс составляет: {usdUser} долларов, {rubUser} рублей и {eurUser} евро");
                    break;

                case ConvertionExit:
                    Console.WriteLine("До свидания!");
                    break;

                default:
                    Console.WriteLine("Такой валюты не существует.");
                    break;
            }
        }
    }
}
