using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string userMessage;
            int numbersOfMessages;

            Console.Write("Введите ваше сообщение: ");
            userMessage = Console.ReadLine();
            Console.Write("Сколько раз его повторить: ");
            numbersOfMessages = Convert.ToInt32(Console.ReadLine());

            while (numbersOfMessages > 0)
            {
                Console.WriteLine(userMessage);
                numbersOfMessages--;
            }
        }
    }
}
