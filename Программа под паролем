using System;
using System.Collections.Generic;
using System.Globalization;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string password = "28Qwerty";
            string inputPassword;
            string secretMessage = "Пуф, теперь ты ящер!";
            string farewell = "Не повезло, не фортануло.....Попробуй позже.";

            int remainingAttempts = 3;
            int numberOfAllAttempts = 2;

            Console.WriteLine("Введите пароль: ");

            for(int i = 0; i <= numberOfAllAttempts; i++)
            {
                inputPassword = Console.ReadLine();

                if(inputPassword == password)
                {
                    Console.Clear();
                    Console.WriteLine(secretMessage);
                }
                else
                {
                    remainingAttempts--;
                    Console.WriteLine("Попробуй еще раз. Количество оставшихся попыток: " + remainingAttempts);
                }
            }

            Console.WriteLine(farewell);
        }
    }
}
