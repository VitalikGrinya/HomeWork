using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int patients;
            int visitMinutes = 10;
            int userVisitTime;
            int minutesInHour = 60;
            int waitingHour;
            int waitingMinutes;

            Console.WriteLine("Время ожидания одного пациента - " + visitMinutes);
            Console.WriteLine("Сколько в очереди бабуль?");
            patients = Convert.ToInt32(Console.ReadLine());
            userVisitTime = visitMinutes * patients;
            waitingMinutes = userVisitTime % minutesInHour;
            waitingHour = userVisitTime / minutesInHour;
            Console.WriteLine("Время ожидание составит - " + waitingHour + " часов "+ waitingMinutes + " минут.");
        }
    }
}
