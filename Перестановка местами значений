using System.Text;
using System.Threading.Tasks;

namespace CSLight
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string name;
            string surname;

            name = "Bugler";
            surname = "Tom";
            Console.WriteLine("Ваше имя - " + name + " ,ваша фамилия - " + surname);
            (name, surname) = (surname, name);
            Console.WriteLine("Ваше имя - " + name + " ,ваша фамилия - " + surname);

        }
    }
}
